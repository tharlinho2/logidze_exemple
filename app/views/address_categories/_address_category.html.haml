= render Table::RowComponent.new(options: { style: 'height: 50px', id: dom_id(address_category) }) do |row|
  - row.with_col( options: { style: 'min-width: 180px' } ) { address_category.name }
  - row.with_col { l(address_category.created_at, format: :date) }
  - row.with_col( options: { class: 'text-end' } ) do
    = link_to t('global.edit'), [:edit, address_category ], class: "text-decoration-none", data: { turbo_frame: :drawer }
    = link_to_unless address_category.has_addresses, t('global.destroy'), [address_category], method: :delete, class: "text-decoration-none", data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }