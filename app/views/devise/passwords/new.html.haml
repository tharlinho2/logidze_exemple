%h5= t('.forgot_your_password')
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  .field.mt-4
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control shadow-none'
  .actions.mt-3.mb-3
    = f.submit t('.send_me_reset_password_instructions'), class: "btn btn-secondary btn-sm"
= render "devise/shared/links"
